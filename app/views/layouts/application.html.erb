<!DOCTYPE html>
<html>
  <head>
    <title>RestaurantManager</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "manifest" %>
  </head>

  <body>
    <div class="page-container">
      <% if logged_in %>
        <%= render "layouts/user_navbar" %>
      <% else %>
        <%= render "layouts/guest_navbar" %>
      <% end %>
      <div class="content-wrap">
        <% if flash.notice %>
          <p class="alert"><%= flash.notice %></p>
        <% end %>

        <%= yield %>
      </div>

      <div class="footer">
        <p>Restaurant manager webapp, Ruby on Rails - 2023</p>
      </div>
    </div>
  </body>
</html>
