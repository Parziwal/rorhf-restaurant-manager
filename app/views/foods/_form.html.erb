<%= form_with model: food do |form| %>
    <% if food.errors.any? %>
        <div class="error-message">
            <h2><%= pluralize(food.errors.count, "error") %> occured:</h2>

            <ul>
                <% food.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div>
        <%= form.label "Restaurant" %>
        <%= collection_select(:food, :restaurant_id, @my_restaurants, :id, :name) %>
    </div>

    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :price %>
        <%= form.number_field :price, step: 0.01 %>
    </div>

    <div>
        <%= form.label :description %>
        <%= form.text_area :description %>
    </div>

    <div>
        <%= form.submit %>
    </div>
<% end %>