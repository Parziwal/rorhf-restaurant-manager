<h1 class="left-align">Foods</h1>
<%= link_to "New food", new_food_path, class: "button right-align" %>
<table class="table">
    <tr>
        <th>Restaurant</th>
        <th>Name</th>
        <th>Price</th>
        <th>Description</th>
        <th></th>
        <th></th>
    </tr>
    <% @foods.each do |food| %>
        <tr>
            <td><%= link_to food.restaurant.name, home_path(food.restaurant) %></td>
            <td><%= food.name %></td>
            <td><%= food.price %></td>
            <td><%= food.description %></td>
            <td><%= link_to "Edit", edit_food_path(food) %></td>
            <td><%= link_to "Delete", food, method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
    <% end %>
</table>