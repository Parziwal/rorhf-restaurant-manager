<h1 style="float: left">Ételek</h1>
<%= link_to 'Új étel', new_food_path, {:style => "float: right; margin: 20px 0px", :class => "button"} %>
<table class="table">
    <tr>
        <th>Étterem</th>
        <th>Név</th>
        <th>Ár</th>
        <th>Leírás</th>
        <th></th>
        <th></th>
    </tr>
    <% @foods.each do |food| %>
        <tr>
            <td>Étterem 1</td>
            <td><%= food.name %></td>
            <td><%= food.price %></td>
            <td><%= food.description %></td>
            <td><%= link_to 'Szerkesztés', edit_food_path(food) %></td>
            <td><%= link_to 'Törlés', food, method: :delete, data: { confirm: 'Biztos?' } %></td>
        </tr>
    <% end %>
</table>