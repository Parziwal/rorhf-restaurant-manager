<h1 class="left-align">My restaurants</h1>
<%= link_to "New restaurant", new_restaurant_path, :class => "button right-align" %>
<table class="table">
    <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Description</th>
        <th></th>
        <th></th>
    </tr>
    <% @restaurants.each do |restaurant| %>
        <tr>
            <td><%= restaurant.name %></td>
            <td><%= restaurant.address %></td>
            <td><%= restaurant.description %></td>
            <td><%= link_to "Edit", edit_restaurant_path(restaurant) %></td>
            <td><%= link_to "Delete", restaurant_path(restaurant), method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
    <% end %>
</table>
